{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        
      // Default
      "forceConsistentCasingInFileNames": true,
      "strict": true, 
      "skipLibCheck": true,
  
      // Added
      "jsx": "react", 
      "module": "ESNext",  
      "declaration": true,
      "declarationDir": "types",
      "outDir": "dist",
      "moduleResolution": "node",
      "allowSyntheticDefaultImports": true,
      "emitDeclarationOnly": true,
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules", "dist", "*.d.ts"]
  }